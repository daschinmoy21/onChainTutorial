{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist"
    },
    "ts-node": {
        "esm": false,
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}